.interactive svg {
  width: 100%;
  height: 500px;
}

.line-group {
  position: relative;
  z-index: 1;
  
  .label {
    opacity: 0;
  }
  
  &.active {
    .label {
      opacity: 5;
    }
  }
}

.median-line {
  stroke: #5E5959;
  stroke-width: 1;
}

.item {
  // stroke: #B7B4B4;
  transition: stroke 250ms ease-out;
  
  .active & {
    stroke: #B13631;
  }
}

.dot {
  .active & {
    fill : #B13631;
  }
}

.hoverline {
  fill: transparent;
  stroke: transparent;
  stroke-width: 0;
}

.label {
  @extend .sans;
  fill: #353131;
  transition: opacity 250ms ease-out;
  font-size: 16px;
  
  user-select: none;
  cursor: default;
}

.leftlabel, .rightaxislabel {
  text-anchor: end;
}

.centerlabel {
  text-anchor: middle;
}

.mainlinelabel {
  font-weight: 700;
}

.rightlabel, .leftaxislabel {
  text-anchor: start;
}

.mainlabel {
  font-style: italic;
}

.unitlabel {
  font-style: italic;
}
